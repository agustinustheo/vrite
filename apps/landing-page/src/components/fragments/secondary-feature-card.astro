---
import { Card, Icon } from "#components/primitives";
import { Observed } from "#components/fragments";
import clsx from "clsx";

interface Props {
  containerClass?: string;
  class?: string;
  title: string;
  icon: string;
}

const { props } = Astro;
---

<Observed
  class={clsx("transform transition-all duration-500 ease-out flex-1", props.containerClass)}
  outOfViewClass="invisible translate-y-1/3"
  client:idle
>
  <Card class={clsx("h-full p-4 m-0 md:p-8", props.class)}>
    <div class="flex flex-col items-start justify-center h-full">
      <div class="flex items-center justify-center w-full">
        <div class="flex-1"></div>
      </div>
      <div class="flex justify-center items-center gap-2">
        <Icon path={props.icon} class="h-6 w-6" />
        <h2 class="text-xl md:text-2xl text-gray-700 dark:text-gray-100">
          {props.title}
        </h2>
      </div>
      <p class="mt-2 flex-1 md:text-lg text-gray-600 dark:text-gray-200">
        <slot />
      </p>
    </div>
  </Card>
</Observed>
