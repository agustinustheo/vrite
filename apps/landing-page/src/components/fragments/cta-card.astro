---
import { Card, IconButton } from "#components/primitives";
import { Observed } from "./observed";
import { mdiLoginVariant, mdiBookOpenBlankVariant } from "@mdi/js";
---

<Observed
  class="transform transition-all duration-500 ease-out w-full max-w-screen-xl px-4 sm:px-8 md:px-8"
  outOfViewClass="invisible translate-y-1/3"
  client:idle
>
  <Card
    class="flex flex-col items-start justify-start w-full h-full p-4 m-0 md:p-8 border-0 overflow-hidden md:flex-row"
    color="primary"
  >
    <div class="flex justify-center items-center h-full relative md:p-12 md:flex-1 w-full">
      <div class="flex flex-col justify-center items-center z-1 w-full">
        <h2 class="text-2xl md:text-3xl mt-2 font-bold text-center">What you're waiting for?</h2>
        <div class="mt-2 md:text-lg w-full">
          <div
            class="items-center justify-center w-full mt-4 gap-2 flex-col md:flex-row flex relative"
          >
            <Card class="p-4 flex flex-col gap-2 w-[20rem] max-w-full justify-center items-center">
              <h2 class="text-xl md:text-2xl text-gray-700 dark:text-gray-100 whitespace-nowrap">
                Vrite Cloud
              </h2>
              <p class="flex-1 md:text-lg text-gray-600 dark:text-gray-200 whitespace-nowrap">
                Try out Vrite right away
              </p>
              <IconButton
                color="primary"
                class="flex items-center justify-center m-0 whitespace-nowrap"
                size="large"
                link="https://app.vrite.io"
                path={mdiLoginVariant}
                label="Get started"
              />
            </Card>
            <Card class="p-4 flex flex-col gap-2 w-[20rem] max-w-full justify-center items-center">
              <h2 class="text-xl md:text-2xl text-gray-700 dark:text-gray-100 whitespace-nowrap">
                Documentation
              </h2>
              <p class="flex-1 md:text-lg text-gray-600 dark:text-gray-200 whitespace-nowrap">
                Learn more about Vrite
              </p>
              <IconButton
                class="flex items-center justify-center m-0 whitespace-nowrap"
                link="https://docs.vrite.io"
                color="primary"
                size="large"
                path={mdiBookOpenBlankVariant}
                label="Read Docs"
              />
            </Card>
          </div>
        </div>
      </div>
    </div>
  </Card>
</Observed>
