---
import { Observed } from "./observed";

interface Props {
  title: string;
  subtitle: string;
}
---

<Observed
  client:visible
  as="span"
  class="transition-all delay-250 duration-500 ease-out inline-block"
  outOfViewClass="invisible -translate-x-4 opacity-0"
>
  <h2 class="text-2xl md:text-5xl !font-extrabold md:max-w-2/3 z-1 relative">
    <span class="bg-gradient-to-r text-transparent bg-clip-text">{Astro.props.title}</span><br />{
      Astro.props.subtitle
    }
  </h2>
</Observed>
