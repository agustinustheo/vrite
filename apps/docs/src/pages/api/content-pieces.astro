---
import { DefaultLayout } from "#components/layouts";
import { APIDocs } from "#components/fragments";
import { getEntry, getCollection } from "astro:content";
import { marked } from "marked";

let { slug } = Astro.params;

if (slug === undefined) {
  return Astro.redirect("/usage-guide/getting-started");
}

const collection = await getCollection("docs");
const entry = await getEntry("docs", slug);

if (entry === undefined) {
  return Astro.redirect("/");
}

const { Content, headings } = await entry.render();
const entryIndex = collection.findIndex((e) => e.slug === slug);
const nextEntry = collection[entryIndex + 1];
const previousEntry = collection[entryIndex - 1];
---

<DefaultLayout
  headings={headings}
  title={entry.data.title}
  nextEntry={nextEntry}
  previousEntry={previousEntry}
>
  <p
    set:html={marked.parseInline(
      `**Content pieces** are at the heart of Vrite - all content you create, as well as all the related metadata is stored across many content pieces.`
    )}
  />
  <APIDocs />
</DefaultLayout>
